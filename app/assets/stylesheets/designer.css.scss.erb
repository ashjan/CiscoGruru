body {
  margin: 0px;
  padding: 0px;
  overflow: hidden;
  position: relative;
}

$blur-amount: 1px;

div.app-container {
  &.css-filter-support {
    &.blur {
      -webkit-filter: blur($blur-amount);
      -moz-filter: blur($blur-amount);
      -o-filter: blur($blur-amount);
      -ms-filter: blur($blur-amount);
      filter: blur($blur-amount);
    }
  }
}

div.canvas-container {
  position: absolute;
  width: 400px;
  height: 400px;
  top: 29px;
  overflow: scroll;
}

canvas#graph {
  margin: 0px;
  padding: 0px;
  //@if $light-theme == true {
  background-image: url(<%= asset_path('canvas-background.png') %>);
  //} @else {
  //	background-image: url(<%= asset_path('canvas-background-dark.png') %>);
  //}
  &.hide-grid {
    background-image: none;
  }
}
