    }
    &.table-color-blue {
      background-color: #1586D6;
    }
    &.table-color-green {
      background-color: #008000;
    }
    &.table-color-orange {
      background-color: #ff8000;
    }
    &.table-color-purple {
      background-color: #7F007F;
    }
    &.table-color-maroon {
      background-color: #800040;
    }
    &.table-color-ocean {
      background-color: #004080;
    }
    &.table-color-teal {
      background-color: #008080;
    }
    &.table-color-asparagus {
      background-color: #808000;
    }
    &.table-color-strawberry {
      background-color: #FF0080;
    }
    &.table-color-iron {
      background-color: #505050;
    }
    &.table-color-reset {
      background-color: white;
    }
  }
  div.color-lines {
    line-height: 1em;
    &.top-row {
      padding-top: 6px;
      padding-bottom: 4px;
    }
    &.bottom-row {
      padding-top: 4px;
      padding-bottom: 6px;
    }
  }
}

