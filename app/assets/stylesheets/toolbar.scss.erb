body.rtl ul.context-menu,
body.rtl ul.submenu {
  box-shadow: -2px 2px 3px $menu-shadow-color;
  > li {
    padding-right: 16px;
    padding-left: 80px;
    span.shortcut {
      left: 16px;
      right: auto;
      margin-right: 45px;
      margin-left: auto;
    }
  }
}

body.rtl ul.submenu {
  //left: -200px;
  // left: auto;
  // right: 0px;
  padding-right: 0px;
  li.has-submenu {
    &:before {
      right: auto;
      left: 3px;
      background: image-url("app-sprites.png") 0px -30px;
    }
  }
}

ul#mainmenu {
  left: 10px;
  top: 0px;
  padding: 0px;
}

ul#usermenu {
  right: 10px;
  top: 0px;
  z-index: 3062;
}

body.rtl ul#mainmenu {
  left: auto;
  right: 10px;
}

body.rtl ul#usermenu {
  left: 10px;
  right: auto;
