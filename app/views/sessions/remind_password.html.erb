<% content_for :title do %>Password recovery | <% end %>
<div class="container content-container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">Password recovery</div>
        </div>
        <div class="panel-body">
          <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <strong>Error!</strong> <%= flash[:alert] %>
            </div>
          <% end %>
          <%= form_tag '/password-recovery/send-reminder' do |f| %>
          <div class="form-group">
            <label for="email">E-mail address</label>
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <%= text_field_tag :email, '', class: 'form-control' %>
              </div>
              <span class="help-block">If you don't remember the e-mail address, contact us at <a href="&#109;ai&#108;to&#58;in&#37;&#54;6o%&#52;&#48;%64&#37;&#54;&#50;&#100;e&#115;i&#103;&#110;&#101;r&#46;%&#54;Eet" target="_blank">info@dbdesigner.net</a></span>
          </div>
          <!--<a href="/login" class="btn btn-default">Back</a>-->
          <%= submit_tag 'Submit', class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>