<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="page-header">
        <h1><%= @article.title %></h1>
      </div>
      <div class="article-list-item__meta">
      	<i class="fa fa-calendar"></i> <i><%= l(@article.created_at, format: :short) %></i>
      	<% if @article.is_sponsored? %>
          &nbsp;&nbsp;<span class="label label-default">SPONSORED</span>
        <% end %>
      </div>
      <div class="article-contents">
      	<%= raw @article.content_html %>
      </div>
    </div>
  </div>
  <div class="row">
  	<div class="col-sm-12">
  		<%= image_tag "/site/placeholder-720-180.png", class: "img-responsive article-placeholder-image" %>
  	</div>
  </div>
</div>
