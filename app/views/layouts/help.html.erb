<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title if content_for? :title %>DbDesigner.net</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    "site", media: "all" %>
  <%= javascript_include_tag "site"  %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class: "navbar-brand" do %>
          <span class="visible-lg-inline visible-md-inline">DbDesigner.net</span>
        <% end %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if current_user.is_signed_in? %>
            <li><%= link_to 'Logout', '/logout' %></li>
          <% else %>
            <li><%= link_to 'Login', login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'menu' %>
      </div>
      <div class="col-md-9">
        <%= yield %>
      </div>
    </div>
  </div>
  <footer class="footer">
  <div class="container">
        <p class="text-muted">
    Copyright Â© 2010-2015 DbDesigner.net. All registered trademarks belong to their respective owners. (r2)</p>
    </div>
  </footer>
  <% if Rails.env.production? %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-11380314-9', 'auto');
    ga('send', 'pageview');
  </script>
  <% end %>
</body>
</html>
